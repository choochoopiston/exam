
<h2>アカウント登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.text_field :name, autocomplete: true, placeholder: "ユーザ名", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード(6文字以上)", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", 
    placeholder: "確認用パスワード（再度パスワードを入力ください)", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "アカウント登録", class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to ">>ユーザー登録確認メール届いていませんか？", new_confirmation_path(resource_name) %><br>