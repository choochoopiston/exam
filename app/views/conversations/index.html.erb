<div class="container-fluid">
  <div class="row">
    <div class="row" style="background-color:#F6F7F9;border:1px solid #ddd;border-bottom: 0px;">
      <h4 style="padding-left: 10px;"><i class="fa fa-envelope"></i> 会話/メッセージ一覧</h4>
    </div>
  </div>
  <div class="row">
    <div class="row user-list" style="background-color:white;border:1px solid #ddd; padding: 5px;">
    <% @conversations.each do |conversation| %>
    <% if conversation.target_user(current_user).present? %>
      <div class="row" style="margin: 5px 0 5px 0; border:0.1px solid #ddd">
        <div class="col-sm-2" style="padding: 0;">
          <%= profile_img_ratio(conversation.target_user(current_user), 50, 50) %>
        </div>
        <div class="col-sm-10" style="padding: 0; text-align:left;">
            <%= conversation.target_user(current_user).name %><br>
            <%= link_to '>>メッセージ送信/内容', conversation_messages_path(conversation) %>
        </div>
      </div>
    <% end %>
    <% end %>
    </div>
  </div>
</div>